/dts-v1/;

#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <espressif/esp32s3/esp32s3_wroom_n16r2.dtsi>
#include <espressif/partitions_0x0_amp.dtsi>
#include "lora_node-pinctrl.dtsi"

/ {
	model = "BuzzVerse Node ESP32S3 PROCPU";
	compatible = "espressif,esp32s3";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &usb_serial;
		zephyr,shell-uart = &usb_serial;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
		zephyr,bt-hci = &esp32_bt_hci;
	};

	aliases {
		i2c-0 = &i2c0;
		watchdog0 = &wdt0;
		led0 = &led0;
		led1 = &led1;
		sw0 = &button0;
		bme280-i2c = &i2c0;
		bq27441-i2c = &i2c0;
		lora0 = &lora0;
	};

	leds {
		compatible = "gpio-leds";

		led0: led_0 {
			gpios = <&gpio 7 GPIO_ACTIVE_HIGH>;
			label = "BUILTIN LED";
		};

		led1: led_1 {
			gpios = <&gpio 14 GPIO_ACTIVE_HIGH>;
			label = "BUILTIN LED";
		};
	};

	buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpio 1 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			zephyr,code = <INPUT_KEY_0>;
		};
	};

};

&usb_serial {
	status = "okay";
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-names = "default";
};

&i2c0 {
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-names = "default";

	bme280@76 {
		compatible = "bosch,bme280";
		reg = <0x76>;
		status = "okay";
	};

	bq27441@55 {
		compatible = "ti,bq274xx";
		reg = <0x55>;
		design-voltage = <3650>;
		design-capacity = <3500>;
		taper-current = <50>;
		terminate-voltage = <3000>;
		status = "okay";
		int-gpios = <&gpio0 2 GPIO_ACTIVE_LOW>;
	};
};
// Konfiguracja pin√≥w ADC
&pinctrl {
    adc_in_pins: adc_in_pins {
        pinmux =  <&gpio0 8 GPIO_ACTIVE_LOW>;
    };
};


&adc1 {
    status = "okay";
    //pinctrl = <&adc_in_pins>;
    //pinctrl-names = "default";
    st,adc-clock-source = <1>;
    st,adc-prescaler = <4>;


    #address-cells = <1>;
    #size-cells = <0>;


    channel@1 {
        reg = <1>;
        zephyr,gain = "ADC_GAIN_1";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,resolution = <12>;
        zephyr,input-positive = <1>;
        zephyr,acquisition-time = <3>;  // Czas akwizycji
    };
};


&spi3 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";
	pinctrl-0 = <&spim3_default>;
	pinctrl-names = "default";
	cs-gpios = <&gpio 10 GPIO_ACTIVE_LOW>;

	lora0: sx1278@0 {
		compatible = "semtech,sx1276";
		reg = <0>;
		spi-max-frequency = <9000000>;
		power-amplifier-output = "pa-boost";
		dio-gpios = <&gpio 46 (GPIO_PULL_DOWN | GPIO_ACTIVE_HIGH)>;
		reset-gpios = <&gpio 21 GPIO_ACTIVE_LOW>;
	};
};

&wdt0 {
	status = "okay";
};

&timer0 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&trng0 {
	status = "okay";
};

&esp32_bt_hci {
	status = "okay";
};
